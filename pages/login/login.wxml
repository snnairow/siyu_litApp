<!--pages/news/news.wxml-->

<view class="page">
    <view class="page_content">
        <image style="width:300rpx; height:300rpx;" mode="aspectFit" src="{{loginlogo}}"></image>
        <view class="button_content">

            <van-cell-group>
                <van-field
                        value="{{ username }}"
                        label="用户名"
                        placeholder="请输入用户名"
                        bind:click-icon="onClickIcon"
                        left-icon="manager"
                />
                <van-field
                        value="{{ username }}"
                        label="手机号"
                        type="number"
                        placeholder="请输入手机号"
                        left-icon="manager"
                />
                <van-field
                        left-icon="lock"
                        right-icon="lock"
                        value="{{ password }}"
                        type="password"
                        label="密码"
                        placeholder="请输入密码"
                        border="{{ false }}"
                />
            </van-cell-group>
        </view>
        <view class="button_content">
            <van-button type="primary">大号按钮</van-button>

        </view>
    </view>

</view>